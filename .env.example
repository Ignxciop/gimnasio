API_URL=https://gimnasio-api.josenunez.cl

# ====================================
# BACKEND
# ====================================
NODE_ENV=production
PORT=4001

# ====================================
# DATABASE
# ====================================
GIMNASIO_DATABASE_URL=postgresql://USUARIO:PASSWORD@HOST:5432/DATABASE

# ====================================
# JWT SECRETS (generar valores seguros)
# ====================================
JWT_SECRET=your-super-secret-jwt-key-min-32-characters
