DATABASE_URL="postgresql://user:password@host:port/database"
PORT=puerto_backend
JWT_SECRET=tu_secret
REFRESH_JWT_SECRET=refresh_secret_diferente_muy_largo_aleatorio_min_64_chars
# JWT_SECRET: Para access tokens (15 minutos). Mínimo 64 caracteres aleatorios
# REFRESH_JWT_SECRET: Para refresh tokens (7 días). Debe ser DIFERENTE al JWT_SECRET
JWT_EXPIRES_IN=15m
REFRESH_JWT_EXPIRES_IN=7d
CSRF_SECRET=csrf_secret_muy_largo_aleatorio_min_64_caracteres
# CSRF_SECRET: Protección contra CSRF attacks. Debe ser único por entorno y de 64+ caracteres aleatorios
NODE_ENV=development
# En producción: NODE_ENV=production (activa HSTS, cookies secure, y oculta stack traces)
CORS_ORIGIN=http://localhost:5173
# En producción: CORS_ORIGIN=https://tudominio.com,https://www.tudominio.com